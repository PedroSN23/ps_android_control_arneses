<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/menu1_button"
        android:clickable="true"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights">
            <com.example.ps_android_control_arneses.view.clases.FontAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/menutw"
                android:layout_centerInParent="true"
                android:text="@string/zmdi_portable_wifi"
                android:id="@+id/button1_icon"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/button1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/menutw"
            android:textStyle="bold"
            android:text="@string/butInit"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button2"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/menu1_button"
        android:clickable="true"
        android:focusable="true">
        <com.example.ps_android_control_arneses.view.clases.FontAwesome
            android:id="@+id/button2_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/menutw"
            android:text="@string/broom"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/button2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/menutw"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button3"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/menu1_button"
        android:clickable="true"
        android:focusable="true">
        <com.example.ps_android_control_arneses.view.clases.FontAwesome
            android:id="@+id/button3_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/menutw"
            android:text="@string/broom"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/button3_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/menutw"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>