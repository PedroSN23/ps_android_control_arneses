<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <RelativeLayout
            android:id="@+id/menu1Main"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu1_main"
            android:elevation="18dp"
            android:layout_weight="25">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                tools:ignore="UselessParent">
                <com.example.ps_android_control_arneses.view.clases.FontAwesome
                    android:id="@+id/men1Ico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/menu1to"
                    android:gravity="center"
                    android:text="@string/list_ol"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu1to"
                    android:gravity="center"
                    android:text="@string/menu1"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu2Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/azulAstlix"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <com.example.ps_android_control_arneses.view.clases.FontAwesome
                    android:id="@+id/men2Ico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/clipboard_check"
                    android:textColor="@color/menu2to"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/menu2"
                    android:textColor="@color/menu2to"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu3Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@color/verdeAstlix2"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <com.example.ps_android_control_arneses.view.clases.FontAwesome
                    android:id="@+id/men3Ico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hand_holding"
                    android:textColor="@color/menu3to"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/menu3"
                    android:textColor="@color/menu3to"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/menu4Main"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu4_main"
            android:elevation="0dp"
            android:layout_weight="25">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <com.example.ps_android_control_arneses.view.clases.FontAwesome
                    android:id="@+id/men4Ico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/menu4to"
                    android:gravity="center"
                    android:text="@string/cogs"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu4to"
                    android:gravity="center"
                    android:text="@string/menu4"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"/>
    
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15">
        </Space>
        <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="85">
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:elevation="20dp"
        android:id="@+id/progresoRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grisTrans"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/ProgressBarLogin"/>
        <TextView
            android:id="@+id/progresoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/menu1to"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/zeroTxt"
            android:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>
