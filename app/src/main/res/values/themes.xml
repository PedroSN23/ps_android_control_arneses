    <style name="myDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/menu1p</item>
    </style>
    <style name="ProgressBarmenu1p" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/menu1p</item>
    </style>
    <style name="ProgressBarmenu2p" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/menu2p</item>
    </style>
    <style name="ProgressBarmenu3p" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/menu3p</item>
    </style>
    <style name="ProgressBarmenu4p" parent="Widget.AppCompat.ProgressBar">
